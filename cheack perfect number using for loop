#include <studio.h>
void main()
{
  int n, i, sum=0:
  printf("Enter the number:-\n");
  scanf("%d", &n);
  for (i=1: i<=n/2; i++0
  {
    if(n%i==0)
    {
      sum+=i;
    }
  }
  if(sum==n && n>0)
  {
    printf("%d" is perfect no", n);
  }
  else
  {
    printf("%d" is not perfect no", n);
  }
}
