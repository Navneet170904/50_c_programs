#include <stdio.h>
#define MAX_SIZE 100

void main()
{
    int(arr[MAX_SIZE]);
    int i, num, count;
    printf("Enter the size of an array:-\n");
    scanf("%d", &num);
    printf("Enter the element of array:- ");
    for(i=1; i<num; i++)
    {
        scanf("%d", &arr[i]);
    }
    for(i=0; i<num; i++)
    {
        if(arr[i] < 0)
        {
            count++;
        }
    }

    printf("\nTotal negative elements in array = %d", count);

}
