#include <stdio.h>
#define MAX_SIZE 100

void main()
{
    int(arr[MAX_SIZE]);
    int i, num, even, odd;
    printf("Enter the size of an array:-\n");
    scanf("%d", &num);
    printf("Enter the element of array:- ");
    for(i=1; i<num; i++)
    {
        scanf("%d", &arr[i]);
    }
    even = 0;
    odd  = 0;

    for(i=0; i<num; i++)
    {
        if(arr[i]%2 == 0)
        {
            even++;
        }
        else
        {
            odd++;
        }
    }
    printf("Total even elements: %d\n", even);
    printf("Total odd elements: %d", odd);

}
